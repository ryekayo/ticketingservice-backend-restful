        userTicketEntity.setDateOpened(new Date());
        userTicketEntity.setPriorityType(priorityOne);
        userTicketEntity.setCaseOwner(caseOwnerOne);
        ticket.add(userTicketEntity);
        // ----------------------------------------------------------------------------
